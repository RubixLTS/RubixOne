<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Site - <%= appName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>

  <!-- Sidebar -->
  <%- include('../../../components/sidebar') %>

  <body
    class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-gray-100 min-h-screen flex flex-col sm:ml-64"
  >
    <!-- Main content -->
    <div class="flex-grow p-6">
      <h1 class="text-2xl font-bold mb-6">Create Site</h1>

      <form action="/web/admin/subscriptions/create" method="POST">
        <div class="mb-4">
          <label for="userId" class="block text-sm font-medium mb-2"
            >User</label
          >
          <select
            id="userId"
            name="userId"
            class="border border-gray-300 text-black rounded px-3 py-2 w-full"
            required
          >
            <% users.forEach((user) => { %>
            <option value="<%= user.id %>"><%= user.username %></option>
            <% }); %>
          </select>
        </div>

        <div class="mb-4">
          <label for="diskLimit" class="block text-sm font-medium mb-2"
            >Disk Limit (MB)</label
          >
          <input
            type="number"
            name="diskLimit"
            placeholder="Disk limit"
            required
          />
        </div>

        <div class="mb-4">
          <label for="port" class="block text-sm font-medium mb-2">Port</label>
          <input
            type="number"
            id="port"
            name="port"
            class="border border-gray-300 text-black rounded px-3 py-2 w-full"
            required
          />
        </div>

        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >
          Create
        </button>

        <button
          type="button"
          class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-2"
          onclick="window.location.href='/web/admin/subscriptions'"
        >
          Cancel
        </button>
      </form>
    </div>

    <!-- Footer -->
    <%- include('../../../components/footer') %>
    <script src="/js/sidebar.js"></script>
  </body>
</html>
